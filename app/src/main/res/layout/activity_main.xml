<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFE">

    <!-- Top container: shows Manage form (header+inputs) OR shopping summary -->
    <FrameLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Empty state (visible when list is empty) -->
    <TextView
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your grocery list is empty.\nUse the form below to add items."
        android:textAlignment="center"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:textColor="#9AA3AF"
        android:visibility="gone" />

    <!-- The list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp" />

    <!-- Bottom nav (2 buttons, pill corners, active/inactive colors) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center"
        android:baselineAligned="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/manage_list"
            app:cornerRadius="28dp" />

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShopping"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/shopping_mode"
            app:cornerRadius="28dp" />
    </LinearLayout>
</LinearLayout>
